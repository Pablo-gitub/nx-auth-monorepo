{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@assignment-ftechnology/db": ["libs/api/db/src/index.ts"],
      "@assignment-ftechnology/contracts": [
        "libs/shared/contracts/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
